# laravel-reverb.service
[Unit]
Description=Laravel Reverb
After=network.target redis.service
Requires=redis.service
PartOf=redis.service

[Service]
User={{ laravel_service_user }}
Group={{ laravel_service_group }}
Restart=always
ExecStart=/usr/bin/php {{laravel_app_path}}artisan reverb:start
LimitNOFILE=30000
PartOf=redis.service

[Install]
WantedBy=multi-user.target