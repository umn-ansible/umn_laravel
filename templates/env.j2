APP_NAME="{{ laravel_appname }}"
APP_ENV={{ laravel_env }}
APP_KEY={{ laravel_secret_key }}
#APP_DEBUG={{ laravel_app_debug }}
APP_URL=https://{{ hostname }}


DB_CONNECTION=mysql
DB_HOST={{ db_hostname }}
DB_PORT={{ db_port }}
DB_DATABASE="{{ db_database }}"
DB_USERNAME="{{ db_username }}"
DB_PASSWORD="{{ db_password }}"
MYSQL_ATTR_SSL_CA="/etc/ssl/certs/ca-bundle.crt"

BROADCAST_DRIVER={{ broadcast_driver }}
CACHE_DRIVER={{ cache_driver }}
SESSION_DRIVER={{ session_driver }}
SESSION_LIFETIME={{ session_lifetime }}
QUEUE_DRIVER={{ queue_driver }}
QUEUE_CONNECTION={{ queue_driver }}

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_DRIVER=smtp
MAIL_HOST="{{ mail_hostname }}"
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_MAILER=smtp
SESSION_SECURE_COOKIE=true

SHIB_EMULATE=false
LOG_CHANNEL=stack

SENTRY_LARAVEL_DSN={{ sentry_dsn }}
SENTRY_TRACES_SAMPLE_RATE={{sentry_samplerate}}
SENTRY_PROFILES_SAMPLE_RATE={{sentry_profilerate}}

{% for addition in laravel_env_additions | default([]) %}
{{ addition }}
{% endfor %}